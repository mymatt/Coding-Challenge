{
  "variables": {
    "name": "web",
    "roles": "",
    "profile": "ec2play",
    "aws_access_key": "{{ env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY`}}",
    "cred_file": "~/.aws/credentials",
    "region": "ap-southeast-2",
    "instance_type": "t2.micro",
    "username": "ubuntu",
    "ami_name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
    "virtual_type": "hvm",
    "root_device": "ebs",
    "type_build": "amazon-ebs",
    "owners":"099720109477",
    "dir":"tmp",
    "playbook":"web_playbook.yaml",
    "hostname": "packer_web",
    "host_function": "web",
    "ami_generic": "Packer"
  },
  "sensitive-variables": ["aws_access_key", "aws_secret_key"],
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "{{user `region`}}",
      "source_ami_filter": {
                "filters": {
                    "name": "{{user `ami_name`}}",
                    "root-device-type": "{{user `root_device`}}",
                    "virtualization-type": "{{user `virtual_type`}}"
                },
                "most_recent": true,
                "owners": [
                    "{{user `owners`}}"
                ]
            },
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "{{user `username`}}",
      "ami_name": "{{user `hostname`}}-{{timestamp}}",
      "tags": {
        "Name": "{{user `ami_generic`}}-{{user `name` }}"
      }
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/user_data.sh",
      "pause_before": "10s"
    },
    {
      "type": "file",
      "source": "provisioners",
      "destination": "/{{user `dir`}}"
    },
    {
      "type": "shell",
      "inline": [
        "sudo ansible-playbook -i 'localhost,' -c local /{{user `dir`}}/provisioners/{{user `playbook`}} -e 'dest_folder={{user `dir`}} roles={{user `roles`}} ansible_python_interpreter=/usr/bin/python3' -v 2>&1 | sudo tee -a /{{user `dir`}}/log"
        ]
    }
  ],
